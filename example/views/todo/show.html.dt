<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <div class="border-b border-gray-200 pb-4 mb-4">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Chi tiết Todo</h1>
    <div class="flex items-center space-x-2">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#todo.completed}}bg-green-100 text-green-800{{/todo.completed}}{{^todo.completed}}bg-yellow-100 text-yellow-800{{/todo.completed}}">
        {{#todo.completed}}Đã hoàn thành{{/todo.completed}}
        {{^todo.completed}}Chưa hoàn thành{{/todo.completed}}
      </span>
    </div>
  </div>

  <div class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Tiêu đề</label>
      <p class="text-lg text-gray-900 bg-gray-50 p-3 rounded-md">{{todo.title}}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Ngày tạo</label>
        <p class="text-sm text-gray-600 bg-gray-50 p-3 rounded-md">{{todo.created_at}}</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Ngày cập nhật</label>
        <p class="text-sm text-gray-600 bg-gray-50 p-3 rounded-md">{{todo.updated_at}}</p>
      </div>
    </div>
  </div>

  <div class="mt-6 flex space-x-3">
    <button class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out">
      Chỉnh sửa
    </button>
    <button class="flex-1 {{#todo.completed}}bg-gray-600 hover:bg-gray-700{{/todo.completed}}{{^todo.completed}}bg-green-600 hover:bg-green-700{{/todo.completed}} text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out">
      {{#todo.completed}}Đánh dấu chưa hoàn thành{{/todo.completed}}
      {{^todo.completed}}Đánh dấu hoàn thành{{/todo.completed}}
    </button>
  </div>
</div>
